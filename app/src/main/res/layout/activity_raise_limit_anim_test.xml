<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".androidTest.anim.wheelText.RaiseLimitAnimTestActivity">


    <RelativeLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_260"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@mipmap/cml_home_card_bg">

        <LinearLayout
            android:id="@+id/ll_top_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_38"
            android:background="@mipmap/cml_home_top"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_18"
                android:background="@mipmap/cml_home_discount_coupon" />

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                tools:text="月综合费率低至" />

        </LinearLayout>

        <View
            android:id="@+id/v_space"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_15"
            android:layout_below="@id/ll_top_card"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_mid_incr"
            android:layout_width="@dimen/dp_63"
            android:layout_height="@dimen/dp_29"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_18"
            android:visibility="gone" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_space"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_23"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tip1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                tools:text="最高借款额度(元)" />

            <TextView
                android:id="@+id/tv_tip2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_76"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_50"
                android:layout_marginBottom="-7dp"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="55sp"
                app:autoSizeMaxTextSize="55sp"
                app:autoSizeMinTextSize="22sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                tools:text="200,000" />

            <LinearLayout
                android:id="@+id/ll_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/img_step"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:src="@mipmap/step_icon"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_tip3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="#CCFFFFFF"
                    android:textSize="@dimen/sp_13"
                    tools:text="授信额度元，当前借款结清后可用" />
            </LinearLayout>


            <!--  两个按钮 -->
            <LinearLayout
                android:id="@+id/ll_home_topcard_doublebtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_28"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_home_topcard_btn_left"
                    android:layout_width="@dimen/dp_134"
                    android:layout_height="@dimen/dp_43"
                    android:layout_marginRight="@dimen/dp_14"
                    android:background="@drawable/btn_home_topcard_jiekuanhuankuan_selector"
                    android:gravity="center"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sp_14"
                    tools:text="立即借款" />

                <TextView
                    android:id="@+id/tv_home_topcard_btn_right"
                    android:layout_width="@dimen/dp_134"
                    android:layout_height="@dimen/dp_43"
                    android:background="@drawable/btn_home_topcard_jiekuanhuankuan_selector"
                    android:gravity="center"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sp_14"
                    tools:text="立即还款" />

            </LinearLayout>

            <!--  一个按钮 -->
            <TextView
                android:id="@+id/tv_home_topcard_onebtn"
                android:layout_width="@dimen/dp_255"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_28"
                android:background="@drawable/shape_home_topcard_btn_blue"
                android:gravity="center"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold"
                android:visibility="visible"
                tools:text="额度领取" />
            <!--老旧代码，没有用，直接gone掉-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_14"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/ll_step"
                    android:layout_width="@dimen/dp_37"
                    android:layout_height="@dimen/dp_18"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@drawable/bg_round_blue_24"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_currentStep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textColor="#FFFD6F0C"
                        android:textSize="@dimen/sp_15"
                        tools:text="1" />

                    <TextView
                        android:id="@+id/tv_totalStep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textColor="#FFFD6F0C"
                        android:textSize="@dimen/sp_13"
                        tools:text="/3" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_cml_home_topcard_tie"
            android:layout_width="@dimen/dp_66"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_23"
            android:background="@mipmap/cml_home_top_tie"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            android:visibility="gone"
            tools:text="" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/cml_background_img" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>