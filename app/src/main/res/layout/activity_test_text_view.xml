<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".androidTest.widget.testTextView.TestTextViewActivity">


    <LinearLayout
        android:id="@+id/ly"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <com.lvwanjie.myapplication.androidTest.widget.testTextView.SDAdaptiveTextView
            android:id="@+id/text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>



    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:breakStrategy="simple"
        android:lineBreakStyle="strict"
        android:text="你好你好你好你好你好你好你好你好你好你好ssssss ssssssssss"/>




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="btClick"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.lvwanjie.myapplication.androidTest.widget.testTextView.MyTextView
        android:layout_width="100dp"
        android:layout_height="300dp"
        android:background="#7F000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="140dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>